# --- Database (Spring Boot จะอ่าน env ข้างล่างนี้) ---
SPRING_DATASOURCE_URL=
SPRING_DATASOURCE_USERNAME=
SPRING_DATASOURCE_PASSWORD=

# --- App Secrets ---
JWT_SECRET=
ADMIN_EMAIL=
# ใช้ตอน seed แอดมินครั้งแรก หรือเวลาตั้ง FORCE_RESET=true
ADMIN_INITIAL_PASSWORD=
# ตั้งเป็น true เฉพาะครั้งที่อยากรีเซ็ตรหัสแอดมิน
ADMIN_FORCE_RESET=false
# พิมพ์รหัสเริ่มต้นใน console (ปิดได้เป็น false)
ADMIN_PRINT_INITIAL_PASSWORD=true
